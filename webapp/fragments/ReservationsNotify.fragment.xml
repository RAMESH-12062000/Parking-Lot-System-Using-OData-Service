<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    class="sapUiBodyBackground sapContrastPlus sapContrast"
>
    <Popover
        id="IdPopOver"
        class="customPopoverContent"
        placement="PreferredLeftOrFlip"
    >
        <customHeader>
            <Bar
                id="idBarPop"
                class="notify"
            >
                <contentLeft>
                    <Text
                        id="idTextPopObver"
                        text="Notifications..!"
                    />
                </contentLeft>
                <contentRight>
                    <!-- <Button
                        id="cancelbtn"
                        icon="sap-icon://sys-cancel"
                        press="oncancelbtn"
                        type="Reject"
                    /> -->
                </contentRight>
            </Bar>
        </customHeader>
        <NotificationList
            id="idNotificationPopOver"
            class="notify"
        >
            <layoutData>
                <FlexItemData
                    id="idFlexData"
                    maxWidth="800px"
                    maxHeight="100px"
                />
            </layoutData>
            <NotificationListGroup
                id="Notification1"
                title="Booking request"
                showCloseButton="false"
                close="onItemClose"
                items="{path: '/ZEWM_T_RESERVSSet', parameters:{ $count : true}}"
                press="onListItemPress"
            >
                <!-- <buttons>
                    <Button
                        text="Accept All"
                        press="onAcceptPress1"
                    />
                </buttons> -->
                <NotificationListItem
                    id="idcolumnItemPopOver"
                    title="Vender Name :- {Vendorname}"
                    description="Hii ! Book the Slot For this date and time {Intime} "
                    highlightText=""
                    showCloseButton="true"
                    datetime=""
                    unread="true"
                    priority="Low"
                    close="onItemClose1"
                    press=".onListItemPress"
                    authorInitials=""
                    authorAvatarColor="Random"
                    class="notify"
                />
            </NotificationListGroup>
        </NotificationList>
    </Popover>
</core:FragmentDefinition>